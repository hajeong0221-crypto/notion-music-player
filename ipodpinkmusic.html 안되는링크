<!-- üéß Audio -->
<audio id="audio"
  src="https://dl.dropboxusercontent.com/scl/fi/54ahz1irkzyt8f4ehaj36/Glen-Check-60-s-Cardin-MusicSpray-TV-Pop-Ch.-SoundLoadMate.com.mp3">
</audio>

<script>
const audio = document.getElementById("audio");
const playBtn = document.getElementById("playBtn");
const fill = document.getElementById("fill");
const time = document.getElementById("time");

let playing = false;

playBtn.addEventListener("click", () => {
  if (!playing) {
    audio.play();
    playBtn.textContent = "‚ùö‚ùö";
    playing = true;
  } else {
    audio.pause();
    playBtn.textContent = "‚ñ∂Ô∏é";
    playing = false;
  }
});

// ÏßÑÌñâÎ∞î & ÏãúÍ∞Ñ ÏóÖÎç∞Ïù¥Ìä∏
audio.addEventListener("timeupdate", () => {
  if (!audio.duration) return;
  const percent = (audio.currentTime / audio.duration) * 100;
  fill.style.width = percent + "%";

  const m = Math.floor(audio.currentTime / 60);
  const s = Math.floor(audio.currentTime % 60);
  time.textContent = `${String(m).padStart(2,"0")}:${String(s).padStart(2,"0")}`;
});

// ÎÅùÎÇòÎ©¥ Ï¥àÍ∏∞Ìôî
audio.addEventListener("ended", () => {
  playing = false;
  playBtn.textContent = "‚ñ∂Ô∏é";
  fill.style.width = "0%";
  time.textContent = "00:00";
});
</script>
